<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/img_wehive_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_action_bar"
        android:contentDescription="@string/app_name"/>

    <uk.co.wehive.hive.utils.CustomFontTextView
        android:id="@+id/txt_title_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/img_wehive_actionbar"
        android:gravity="center|left"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        app:fontName="Raleway-Bold.ttf"/>

</RelativeLayout>