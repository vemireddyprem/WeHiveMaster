<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lyt_spam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/tranparency_report"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/spam"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/chk_spam"
            android:layout_toStartOf="@+id/chk_spam"
            android:text="@string/post_spam"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#15a4ec"
            app:fontName="Raleway-Light.ttf" />

        <CheckBox
            android:id="@+id/chk_spam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/btn_check_notifications" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_compromised"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tranparency_report_compromised"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/compromised"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/textVi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textVie"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/chk_compromised"
            android:layout_toStartOf="@+id/chk_compromised"
            android:text="@string/usermay"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#15a4ec"
            app:fontName="Raleway-Light.ttf" />

        <CheckBox
            android:id="@+id/chk_compromised"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textVi"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textVie"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/btn_check_notifications" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_abusive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tranparency_report"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/abusive"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/chk_abusive"
            android:layout_toStartOf="@+id/chk_abusive"
            android:text="@string/violationhive"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#15a4ec"
            app:fontName="Raleway-Light.ttf" />

        <CheckBox
            android:id="@+id/chk_abusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/text"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:button="@drawable/btn_check_notifications" />

    </RelativeLayout>

</LinearLayout>
