<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/general_background"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_we_hive"/>

                <uk.co.wehive.hive.utils.CustomFontTextView
                    android:id="@+id/lbl_we_hive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imageView"
                    android:text="@string/we_hive"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:fontName="Raleway-Light.ttf"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:layout_marginTop="1sp">

                <ImageView
                    android:id="@+id/img_user_photo"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/photo"
                    android:src="@drawable/ic_userphoto_menu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <uk.co.wehive.hive.utils.CustomFontTextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:fontName="Raleway-Light.ttf"/>

                    <uk.co.wehive.hive.utils.CustomFontTextView
                        android:id="@+id/txt_user_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:fontName="Raleway-Light.ttf"/>

                </LinearLayout>

            </RelativeLayout>

            <uk.co.wehive.hive.utils.CustomFontTextView
                android:id="@+id/txt_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|center"
                android:hint="@string/sign_up_fb_instuctions"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:fontName="Raleway-Light.ttf"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="10dp">

                <uk.co.wehive.hive.utils.CustomFontEditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ed_login_background"
                    android:hint="@string/username"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:fontName="Raleway-Light.ttf"/>

                <uk.co.wehive.hive.utils.CustomFontEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ed_login_background"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:fontName="Raleway-Light.ttf"/>

                <uk.co.wehive.hive.utils.CustomFontEditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ed_login_background"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:fontName="Raleway-Light.ttf"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp">

                <CheckBox
                    android:id="@+id/chk_terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/check_terms"
                    android:paddingTop="20dp"/>

                <uk.co.wehive.hive.utils.CustomFontTextView
                    android:id="@+id/txt_text_and_conditions_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/chk_terms_and_conditions"
                    android:gravity="top"
                    android:hint="@string/terms_and_conditions_intro"
                    android:lines="2"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:fontName="Raleway-Light.ttf"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <uk.co.wehive.hive.utils.CustomFontButton
        android:id="@+id/btn_signup_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/wehive_blue"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        app:fontName="Raleway-Light.ttf"/>

</RelativeLayout>