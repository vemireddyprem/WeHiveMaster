<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_user_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_profile_menu" />

    <uk.co.wehive.hive.utils.CustomFontTextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/img_user_comment"
        android:layout_toRightOf="@id/img_user_comment"
        android:textColor="@android:color/black"
        app:fontName="Raleway-Light.ttf" />

    <uk.co.wehive.hive.utils.CustomFontTextView
        android:id="@+id/txt_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/txt_user_name"
        android:textColor="@android:color/darker_gray"
        app:fontName="Raleway-Light.ttf" />

    <ImageView
        android:id="@+id/img_like_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_like_inactive"
        android:contentDescription="@string/app_name"
        android:gravity="left|center_horizontal|center_vertical" />

    <uk.co.wehive.hive.utils.CustomFontTextView
        android:id="@+id/txt_comment_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_user_name"
        android:layout_toLeftOf="@id/img_like_event"
        android:layout_toRightOf="@id/img_user_comment"
        android:textColor="@android:color/black"
        app:fontName="Raleway-Light.ttf"
        android:linksClickable="true"
        android:autoLink="web|email" />

</RelativeLayout>