<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/general_background">

    <uk.co.wehive.hive.utils.CustomFontButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/wehive_blue"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        app:fontName="Raleway-Light.ttf"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_save"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <uk.co.wehive.hive.utils.CustomFontEditText
                        android:id="@+id/edt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ed_login_background"
                        android:editable="false"
                        android:hint="@string/email_address"
                        android:inputType="none"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        app:fontName="Raleway-Light.ttf"/>

                    <uk.co.wehive.hive.utils.CustomFontEditText
                        android:id="@+id/edt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/ed_login_background"
                        android:editable="false"
                        android:hint="@string/username"
                        android:inputType="none"
                        android:lines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        app:fontName="Raleway-Light.ttf"/>

                    <uk.co.wehive.hive.utils.CustomFontEditText
                        android:id="@+id/edt_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/ed_login_background"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        app:fontName="Raleway-Light.ttf"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_photo"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ed_login_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_camera"
                        android:visibility="gone"/>

                    <uk.co.wehive.hive.utils.CustomFontTextView
                        android:id="@+id/lbl_user_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ed_login_background"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/ic_camera"
                        android:gravity="center"
                        android:hint="@string/photo"
                        android:padding="25dp"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        app:fontName="Raleway-Light.ttf"/>
                </LinearLayout>
            </LinearLayout>

            <uk.co.wehive.hive.utils.CustomFontEditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ed_login_background"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:lines="1"
                android:padding="10dp"
                android:textColor="@android:color/white"
                app:fontName="Raleway-Light.ttf"/>

            <uk.co.wehive.hive.utils.CustomFontEditText
                android:id="@+id/edt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ed_login_background"
                android:hint="@string/phone_number"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@android:color/white"
                app:fontName="Raleway-Light.ttf"/>

            <Spinner
                android:id="@+id/edt_country"
                style="@style/SpinnerAsEditText"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ed_login_background"
                android:gravity="top"
                android:hint="@string/location"
                android:maxLength="139"
                android:popupBackground="@drawable/general_background"
                android:spinnerMode="dropdown"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/edt_city"
                style="@style/SpinnerAsEditText"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ed_login_background"
                android:gravity="top"
                android:hint="@string/city"
                android:maxLength="139"
                android:popupBackground="@drawable/general_background"
                android:spinnerMode="dropdown"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <uk.co.wehive.hive.utils.CustomFontEditText
                android:id="@+id/edt_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ed_login_background"
                android:gravity="top"
                android:hint="@string/bio"
                android:lines="4"
                android:maxLength="139"
                android:padding="10dp"
                android:textColor="@android:color/white"
                app:fontName="Raleway-Light.ttf"/>

            <com.facebook.widget.LoginButton
                android:id="@+id/btn_connect_facebook"
                xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_facebook_follow"
                android:drawableLeft="@drawable/ic_facebook_follow"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:fontName="Raleway-Light.ttf"
                fb:background="@drawable/bt_facebook_background"
                fb:login_text="@string/connect_with_facebook"
                fb:logout_text="@string/use_facebook"/>

            <uk.co.wehive.hive.utils.CustomFontButton
                android:id="@+id/btn_connected_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bt_facebook_follow"
                android:drawableLeft="@drawable/ic_facebook_follow"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/use_facebook"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:fontName="Raleway-Light.ttf"/>

            <uk.co.wehive.hive.utils.CustomFontButton
                android:id="@+id/btn_connect_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_twitter_connected"
                android:drawablePadding="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:fontName="Raleway-Light.ttf"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>