<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/events_row_background">

    <ImageView
        android:id="@+id/img_artist_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:contentDescription="@string/artist"
        android:src="@drawable/ic_userphoto_menu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:fontName="Raleway-Bold.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_event_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wehive_blue"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:fontName="Raleway-Light.ttf" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="3">

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_live_event"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawablePadding="15dp"
            android:gravity="center_horizontal"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_event_assistants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/followers_background"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/ic_people"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:fontName="Raleway-Light.ttf" />

        <uk.co.wehive.hive.utils.CustomFontTextView
            android:id="@+id/txt_event_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/ic_clock"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:fontName="Raleway-Light.ttf" />
    </RelativeLayout>

</LinearLayout>